extends layout

block content
    head
        meta(charset='UTF-8')
        title Search
    h1(style="color:  #2980b9") Here are the records that match your search !
    table(class="result-table")
        tr
            td(class="nameColumn column-head") Name
            td(class="careerColumn column-head") Career Summary
            td(class="experienceColumn column-head") Experience
            td(class="expertiseColumn column-head") Expertise
            td(class="languagesColumn column-head") Languages
        each mentor in mentors
            tr 
                td #{mentor.name}
                td #{mentor.careerSummary}
                td 
                    each e, index in mentor.experience
                        span #{mentor.experience[index]} 
                        br 
                        br
                td 
                    each e, index in mentor.expertise 
                        span #{mentor.expertise[index]}
                        br
                        br
                td 
                    each e, index in mentor.languages
                        span #{mentor.languages[index]}
                        br
                        br

    br
    br
    a(href='/search' ) Back to Search Page
    a(href='/' style="padding:15px;") Return to Main Page
